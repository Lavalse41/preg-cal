<body>

<div class="outer-container">
    <h1>คำนวณอายุครรภ์</h1>
    <div class="container">
        <p>วันที่ประจำเดือนมา</p>
            <input type="date" id="start" name="start" value="" min="" max="">
            <p>วันสุดท้าย</p>
            <input type="date" id="end" name="end" value="" min="" max="">
            <p>อายุครรภ์</p>
            <div class="result">
            <p id="preg-res"></p>
        </div>
        <button class="reset-btn" onclick="resetDate()">Reset</button>
    </div>
</div>

<script>
//set default date 
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0
    var yyyy = today.getFullYear();

    if (dd < 10) {
    dd = '0' + dd;
    }

    if (mm < 10) {
    mm = '0' + mm;
    } 
        
    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("start").setAttribute("max", today);
    document.getElementById("end").setAttribute("value", today);

//error handling start date must be less than end date
    document.getElementById("start").addEventListener("change", function() {
        var start = new Date(this.value);
        var end = new Date(document.getElementById("end").value);
        document.getElementById("end").setAttribute("min", start.toISOString().split("T")[0]);
    });

    document.getElementById("end").addEventListener("change", function() {
        var end = new Date(this.value);
        var start = new Date(document.getElementById("start").value);
        document.getElementById("start").setAttribute("max", end.toISOString().split("T")[0]);
    });

// cal from start date to end date
    document.getElementById("start").addEventListener("change", function() {
        var start = new Date(this.value);
        var end = new Date(document.getElementById("end").value);
        var diffTime = Math.abs(end - start);
        var diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24)); 
        var weeks = Math.floor(diffDays / 7);
        var days = diffDays % 7;
        document.getElementById("preg-res").innerHTML = weeks + " สัปดาห์ " + days + " วัน";
    });

    document.getElementById("end").addEventListener("change", function() {
        var end = new Date(this.value);
        var start = new Date(document.getElementById("start").value);
        var diffTime = Math.abs(end - start);
        var diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24)); 
        var weeks = Math.floor(diffDays / 7);
        var days = diffDays % 7;
        document.getElementById("preg-res").innerHTML = weeks + " สัปดาห์ " + days + " วัน";
    });

//reset date
    function resetDate() {
        document.getElementById("start").value = "";
        document.getElementById("end").value = today;
        document.getElementById("preg-res").innerHTML = "";
    }
</script>


</body>
